{
  "name": "malebangkok-backend",
  "version": "1.0.0",
  "description": "MaleBangkok production backend API",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "db:schema": "node -e \"const fs=require('fs'); console.log(fs.readFileSync('./config/schema.sql','utf8'))\"",
    "health": "node -e \"fetch('http://localhost:'+(process.env.PORT||5000)+'/api/health').then(r=>r.text()).then(console.log).catch(console.error)\""
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.5",
    "nodemailer": "^7.0.6",
    "stripe": "^18.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
